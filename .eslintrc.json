{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
      "ecmaVersion": 2021
  },
  "rules": {
    "react/react-in-jsx-scope": "off",
    "quotes": [
      "error",
      "single"
    ],
    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["invalidHref", "preferButton"]
      }
    ],
    "import/no-anonymous-default-export": "off",
    "semi": ["error", "never"]
  }
}
